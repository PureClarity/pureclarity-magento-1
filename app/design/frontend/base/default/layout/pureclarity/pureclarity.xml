<layout version="0.1.0">

    <default>
        <reference name="before_body_end">
            <block type="core/template" name="pureclarity.core.allpages" template="pureclarity/core/all_pages.phtml"/>
            <block type="core/template" name="pureclarity.core.cart_added" template="pureclarity/core/cartadded.phtml"/>
            <block type="core/template" name="pureclarity.core.cart_removed"
                   template="pureclarity/core/cartremoved.phtml"/>
            <block type="core/template" name="pureclarity.core.cart_changequantity"
                   template="pureclarity/core/cartchangequantity.phtml"/>
            <block type="core/template" name="pureclarity.core.userlogin" template="pureclarity/core/userlogin.phtml"/>
            <block type="core/template" name="pureclarity.core.userlogout"
                   template="pureclarity/core/userlogout.phtml"/>
        </reference>

        <reference name="top.search">
            <action method="setTemplate" ifconfig="pureclarity_core/general_config/search_active">
                <template>pureclarity/search/search.phtml</template>
            </action>
        </reference>

        <reference name="head">
            <action method="addCss"><stylesheet>css/pureclarity/pureclarity_bmz_selection.css</stylesheet></action>
        </reference>

    </default>

    <catalogsearch_result_index>
        <reference name="search.result">
            <action method="setTemplate" ifconfig="pureclarity_core/general_config/search_active">
                <template>pureclarity/search/search_results.phtml</template>
            </action>
        </reference>
        <reference name="left">
            <!--
            <action method="setTemplate" ifconfig="pureclarity_core/general_config/search_active">
                <template>pureclarity/search/search_results_filters.phtml</template>
            </action>
            -->
            <block type="pureclarity_core/search_filters" name="pureclarity.search.filters"
                   template="pureclarity/search/search_results_filters.phtml"/>
        </reference>
    </catalogsearch_result_index>

    <catalog_product_view>
        <reference name="before_body_end">
            <block type="pureclarity_core/productview" name="pureclarity.product.view" template="pureclarity/core/product_view.phtml" />
        </reference>
    </catalog_product_view>

    <checkout_onepage_success>
        <reference name="before_body_end">
            <block type="core/template" name="pureclarity.onepage.success" template="pureclarity/core/onepage_success.phtml" />
        </reference>
    </checkout_onepage_success>

</layout>
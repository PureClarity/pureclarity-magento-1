<?xml version="1.0"?>

<layout version="1.0.0">


    <!-- HOME PAGE - BMZs -->
    <cms_index_index>
        <reference name="content">
            <block type="pureclarity_core/bmz" name="pureclarity.bmz.hp01" after="-" template="pureclarity/BMZ/bmz.phtml">
                <action method="setData">
                    <name>bmz_id</name>
                    <value>HP-01</value>
                </action>
            </block>
            <block type="pureclarity_core/bmz" name="pureclarity.bmz.hp02" after="-" template="pureclarity/BMZ/bmz.phtml">
                <action method="setData">
                    <name>bmz_id</name>
                    <value>HP-02</value>
                </action>
            </block>
            <block type="pureclarity_core/bmz" name="pureclarity.bmz.hp03" after="-" template="pureclarity/BMZ/bmz.phtml">
                <action method="setData">
                    <name>bmz_id</name>
                    <value>HP-03</value>
                </action>
            </block>
            <block type="pureclarity_core/bmz" name="pureclarity.bmz.hp04" after="-" template="pureclarity/BMZ/bmz.phtml">
                <action method="setData">
                    <name>bmz_id</name>
                    <value>HP-04</value>
                </action>
            </block>
        </reference>
    </cms_index_index>

    <!-- Product page -->
    <catalog_product_view>
        <reference name="before_body_end">
            <block type="pureclarity_core/productview" name="pureclarity.product.view" template="pureclarity/core/product_view.phtml" />
        </reference>
        <reference name="content">
            <block type="pureclarity_core/bmz" name="pureclarity.bmz.pp01" after="-" template="pureclarity/BMZ/bmz.phtml">
                <action method="setData">
                    <name>bmz_id</name>
                    <value>PP-01</value>
                </action>
            </block>
            <block type="pureclarity_core/bmz" name="pureclarity.bmz.pp02" after="-" template="pureclarity/BMZ/bmz.phtml">
                <action method="setData">
                    <name>bmz_id</name>
                    <value>PP-02</value>
                </action>
            </block>
        </reference>
    </catalog_product_view>


    <!-- Search Results Page -->
    <catalogsearch_result_index>
        <reference name="root">
            <action method="setTemplate">
            <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="search.result">
            <action method="setTemplate" ifconfig="pureclarity_core/general_config/search_active">
                <template>pureclarity/search/search_results.phtml</template>
            </action>
            <block type="pureclarity_core/bmz" name="pureclarity.bmz.sr01" after="-" template="pureclarity/BMZ/bmz.phtml">
                <action method="setData">
                    <name>bmz_id</name>
                    <value>SR-01</value>
                </action>
            </block>
            <block type="pureclarity_core/bmz" name="pureclarity.bmz.sr02" after="-" template="pureclarity/BMZ/bmz.phtml">
                <action method="setData">
                    <name>bmz_id</name>
                    <value>SR-02</value>
                </action>
            </block>
        </reference>
    </catalogsearch_result_index>
    


    <default>

        <reference name="before_body_end">
            
            <block type="core/template" name="pureclarity.core.allpages" template="pureclarity/core/all_pages.phtml"/>

            <block type="core/template" name="pureclarity.core.cart_added" template="pureclarity/core/cartadded.phtml"/>

            <block type="core/template" name="pureclarity.core.cart_removed" template="pureclarity/core/cartremoved.phtml"/>

            <block type="core/template" name="pureclarity.core.cart_changequantity" template="pureclarity/core/cartchangequantity.phtml"/>

            <block type="core/template" name="pureclarity.core.userlogin" template="pureclarity/core/userlogin.phtml"/>

            <block type="core/template" name="pureclarity.core.userlogout" template="pureclarity/core/userlogout.phtml"/>
        </reference>

        <reference name="top.search">

            <action method="setTemplate" ifconfig="pureclarity_core/general_config/search_active">
                <template>pureclarity/search/search.phtml</template>
            </action>

        </reference>

        <reference name="head">
            <action method="addCss"><stylesheet>css/pureclarity/pureclarity.css</stylesheet></action>
        </reference>

    </default>

    

    

    <checkout_onepage_success>
        <reference name="before_body_end">
            <block type="core/template" name="pureclarity.onepage.success" template="pureclarity/core/onepage_success.phtml" />
        </reference>
    </checkout_onepage_success>

</layout>